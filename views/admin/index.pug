extends ../layout

block content
  div(class="wrapper")
    h1= title
    nav
      ul(class="add")
        li 
          a( href='/admin/news/add') dodaj
    table 
      tr 
        th id 
        th tytuł
        th data dodania
        th akcja 
      each item, index in data
        tr 
          td=index 
          td=item.title 
          td
            i=item.created.toLocaleString()
          td 
            a( class='delete' href=`/admin/news/delete/${item._id}`) usuń
