    form(method='get')
      input(type='text' name='search' value=search placeholder='wyszukaj artyku≈Ç')
      input(type='submit' value='szukaj')
    
    each item in data
      article
        h1=item.title
        p
          i=item.created.toLocaleString()
        p=item.description